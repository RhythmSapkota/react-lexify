{
  "name": "rs-richeditor",
  "version": "1.0.7-beta.1",
  "description": "A customizable, performant, and modern rich text editor built with Lexical and React. Created by Rhythm Sapkota.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/rs-richeditor.css",
  "files": [
    "dist",
    "dist/rs-richeditor.css",
    "dist/cat-typing-BZQCDE3J.gif",
